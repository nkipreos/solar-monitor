<div class="container">
  <div class="row">
    <div class="jumbotron col-md-6 col-md-offset-3">
      <%= form_tag(create_session_path, class: 'display-inline') do %>
        <div class='form-group'>
          <%= email_field_tag('email', params[:email], class: 'form-control', placeholder: 'Email') %>
        </div>
        <div class='form-group'>
          <%= password_field_tag('password', "", class: 'form-control', placeholder: 'Password') %>
        </div>
        <%= submit_tag "Submit", class: 'btn btn-success' %>
      <% end %>
      <div class='display-inline float-right'>
        <%= link_to "Create new account", new_account_path %>
      </div>
    </div>
  </div>
</div>