<div class="container">
  <div class="row">
    <div class="jumbotron col-md-6 col-md-offset-3">
      <%= form_tag(create_account_path, class: 'display-inline', method: 'POST') do %>
        <div class='form-group'>
          <%= text_field_tag('name', params[:name], class: 'form-control', placeholder: 'Name') %>
        </div>
        <div class='form-group'>
          <%= email_field_tag('email', params[:email], class: 'form-control', placeholder: 'Email') %>
        </div>
        <div class='form-group'>
          <%= password_field_tag('password', "", class: 'form-control', placeholder: 'Password') %>
        </div>
        <div class="form-group">
          <%= select_tag :timezone, options_for_select(@timezones.collect{|c| [c[:name], c[:id]]}), class: 'form-control' %>
        </div>
        <%= submit_tag "Submit", class: 'btn btn-success' %>
      <% end %>
      <div class='display-inline float-right'>
        <%= link_to "Login", login_path %>
      </div>
    </div>
  </div>
</div>